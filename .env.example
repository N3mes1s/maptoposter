# MapToPoster Environment Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# API Settings
# =============================================================================

# API server host and port
API_HOST=0.0.0.0
API_PORT=8000

# Redis URL (for production with Redis Queue)
REDIS_URL=redis://localhost:6379

# =============================================================================
# CORS Settings
# =============================================================================

# Comma-separated list of allowed origins, or "*" for all origins
# Examples:
#   CORS_ORIGINS=*
#   CORS_ORIGINS=http://localhost:3000,https://example.com
CORS_ORIGINS=*

# Allow credentials (cookies, auth headers) - only works with specific origins
CORS_ALLOW_CREDENTIALS=false

# =============================================================================
# Map Generation Settings
# =============================================================================

# Distance bounds (meters)
MAX_DISTANCE=50000
MIN_DISTANCE=2000
DEFAULT_DISTANCE=15000

# Default theme name
DEFAULT_THEME=feature_based

# =============================================================================
# Rate Limiting (seconds between requests)
# =============================================================================

# Delay between Nominatim geocoding requests
NOMINATIM_DELAY=1.0

# Delay between OpenStreetMap data requests
OSM_DELAY=0.5

# =============================================================================
# Timeout Settings (seconds)
# =============================================================================

# Timeout for Nominatim geocoding requests
NOMINATIM_TIMEOUT=10.0

# Timeout for OpenStreetMap data fetching
OSM_TIMEOUT=60.0

# =============================================================================
# Output Settings
# =============================================================================

# DPI for final poster output
OUTPUT_DPI=300

# DPI for preview images (lower = faster, smaller files)
PREVIEW_DPI=72

# =============================================================================
# Job Settings
# =============================================================================

# How long to keep completed jobs (hours)
JOB_TTL_HOURS=24

# Maximum concurrent poster generation jobs
MAX_CONCURRENT_JOBS=5

# =============================================================================
# Logging Settings
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Use JSON format for logs (recommended for production)
LOG_JSON=false
